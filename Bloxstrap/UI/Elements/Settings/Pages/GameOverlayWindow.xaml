<Window
    x:Class="Voidstrap.UI.Elements.Settings.Pages.GameOverlayWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Game Overlay"
    Width="300"
    Height="200"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    Topmost="True"
    WindowStyle="None"
    MouseDown="Window_MouseDown"
    mc:Ignorable="d">

    <Border
        Padding="16"
        Background="#CC000000"
        BorderBrush="#FF444444"
        BorderThickness="1"
        CornerRadius="12">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,12">
                <TextBlock
                    FontSize="14"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="Game Overlay" />
                <Button
                    x:Name="CloseButton"
                    Width="20"
                    Height="20"
                    HorizontalAlignment="Right"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="CloseButton_Click"
                    Content="✕"
                    Foreground="White"
                    FontSize="12"
                    Cursor="Hand" />
            </Grid>

            <!-- Stats -->
            <StackPanel Grid.Row="1">
                <!-- FPS -->
                <Border
                    Padding="8"
                    Background="#33FFFFFF"
                    CornerRadius="6"
                    Margin="0,0,0,8">
                    <Grid>
                        <TextBlock
                            FontSize="12"
                            Foreground="#CCFFFFFF"
                            Text="FPS" />
                        <TextBlock
                            x:Name="FpsText"
                            HorizontalAlignment="Right"
                            FontSize="18"
                            FontWeight="Bold"
                            Foreground="#00FF00"
                            Text="60" />
                    </Grid>
                </Border>

                <!-- Ping -->
                <Border
                    Padding="8"
                    Background="#33FFFFFF"
                    CornerRadius="6"
                    Margin="0,0,0,8">
                    <Grid>
                        <TextBlock
                            FontSize="12"
                            Foreground="#CCFFFFFF"
                            Text="Ping" />
                        <TextBlock
                            x:Name="PingText"
                            HorizontalAlignment="Right"
                            FontSize="18"
                            FontWeight="Bold"
                            Foreground="#FFFF00"
                            Text="0 ms" />
                    </Grid>
                </Border>

                <!-- CPU -->
                <Border
                    Padding="8"
                    Background="#33FFFFFF"
                    CornerRadius="6"
                    Margin="0,0,0,8">
                    <Grid>
                        <TextBlock
                            FontSize="12"
                            Foreground="#CCFFFFFF"
                            Text="CPU" />
                        <TextBlock
                            x:Name="CpuText"
                            HorizontalAlignment="Right"
                            FontSize="14"
                            FontWeight="Bold"
                            Foreground="#FF8800"
                            Text="0%" />
                    </Grid>
                </Border>

                <!-- RAM -->
                <Border
                    Padding="8"
                    Background="#33FFFFFF"
                    CornerRadius="6">
                    <Grid>
                        <TextBlock
                            FontSize="12"
                            Foreground="#CCFFFFFF"
                            Text="RAM" />
                        <TextBlock
                            x:Name="RamText"
                            HorizontalAlignment="Right"
                            FontSize="14"
                            FontWeight="Bold"
                            Foreground="#00FFFF"
                            Text="0 MB" />
                    </Grid>
                </Border>
            </StackPanel>

            <!-- Footer -->
            <Grid Grid.Row="2" Margin="0,12,0,0">
                <TextBlock
                    FontSize="10"
                    Foreground="#88FFFFFF"
                    Text="Drag to move • Click X to close" />
            </Grid>
        </Grid>
    </Border>
</Window>
