<ui:UiPage
    x:Class="Voidstrap.UI.Elements.Settings.Pages.GameJoinHistoryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Voidstrap.UI.Elements.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:resources="clr-namespace:Voidstrap.Resources"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Game Join History"
    d:DesignWidth="800"
    Scrollable="True"
    mc:Ignorable="d">

    <StackPanel Margin="0,0,16,16">
        <TextBlock
            FontSize="20"
            FontWeight="Medium"
            Text="Game Join History" />
        <TextBlock
            Margin="0,4,0,16"
            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
            Text="Track and quickly rejoin your recently played games" />

        <!-- Controls -->
        <ui:CardControl Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <ui:TextBox
                        x:Name="SearchBox"
                        Width="300"
                        Margin="0,0,12,0"
                        PlaceholderText="Search games..."
                        TextChanged="SearchBox_TextChanged" />
                    <TextBlock
                        x:Name="CountText"
                        VerticalAlignment="Center"
                        Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                        Text="0 games in history" />
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <ui:Button
                        x:Name="RefreshButton"
                        Margin="0,0,8,0"
                        Click="RefreshButton_Click"
                        Content="Refresh"
                        Icon="ArrowSync24" />
                    <ui:Button
                        x:Name="ClearButton"
                        Appearance="Secondary"
                        Click="ClearButton_Click"
                        Content="Clear History"
                        Icon="Delete24" />
                </StackPanel>
            </Grid>
        </ui:CardControl>

        <!-- History List -->
        <ui:CardControl>
            <StackPanel>
                <TextBlock
                    FontSize="16"
                    FontWeight="SemiBold"
                    Margin="0,0,0,16"
                    Text="Recent Games" />

                <ScrollViewer MaxHeight="500" VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="HistoryList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border
                                    Padding="12"
                                    Margin="0,0,0,8"
                                    Background="{DynamicResource ControlFillColorDefaultBrush}"
                                    CornerRadius="8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="60" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <!-- Game Icon -->
                                        <Border
                                            Grid.Column="0"
                                            Width="50"
                                            Height="50"
                                            Background="{DynamicResource SystemAccentBrush}"
                                            CornerRadius="8">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                FontSize="24"
                                                Text="ðŸŽ®" />
                                        </Border>

                                        <!-- Game Info -->
                                        <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                                            <TextBlock
                                                FontSize="14"
                                                FontWeight="SemiBold"
                                                Text="{Binding GameName}" />
                                            <TextBlock
                                                FontSize="12"
                                                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                Text="{Binding PlaceId, StringFormat='Place ID: {0}'}" />
                                            <TextBlock
                                                FontSize="11"
                                                Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                                Text="{Binding LastPlayed, StringFormat='Last played: {0}'}" />
                                        </StackPanel>

                                        <!-- Actions -->
                                        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                            <ui:Button
                                                Width="100"
                                                Margin="0,0,8,0"
                                                Appearance="Primary"
                                                Click="RejoinButton_Click"
                                                Content="Rejoin"
                                                Icon="Play24"
                                                Tag="{Binding PlaceId}" />
                                            <ui:Button
                                                Width="40"
                                                Appearance="Secondary"
                                                Click="RemoveButton_Click"
                                                Icon="Delete24"
                                                Tag="{Binding PlaceId}"
                                                ToolTip="Remove from history" />
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Empty State -->
                <StackPanel
                    x:Name="EmptyState"
                    Margin="0,40,0,40"
                    HorizontalAlignment="Center"
                    Visibility="Collapsed">
                    <TextBlock
                        FontSize="48"
                        HorizontalAlignment="Center"
                        Text="ðŸŽ®" />
                    <TextBlock
                        Margin="0,16,0,8"
                        FontSize="16"
                        FontWeight="SemiBold"
                        HorizontalAlignment="Center"
                        Text="No games in history" />
                    <TextBlock
                        FontSize="12"
                        Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                        HorizontalAlignment="Center"
                        Text="Games you join will appear here" />
                </StackPanel>
            </StackPanel>
        </ui:CardControl>

        <!-- Settings -->
        <ui:CardControl Margin="0,16,0,0">
            <StackPanel>
                <TextBlock
                    FontSize="16"
                    FontWeight="SemiBold"
                    Margin="0,0,0,16"
                    Text="History Settings" />

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Margin="0,8" VerticalAlignment="Center" Text="Enable game history tracking" />
                    <ui:ToggleSwitch x:Name="EnableHistoryToggle" Grid.Row="0" Grid.Column="1" Margin="0,8" IsChecked="True" />

                    <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,8" VerticalAlignment="Center" Text="Maximum history entries" />
                    <ComboBox x:Name="MaxEntriesCombo" Grid.Row="1" Grid.Column="1" Margin="0,8" Width="120" SelectedIndex="1">
                        <ComboBoxItem Content="10" />
                        <ComboBoxItem Content="25" />
                        <ComboBoxItem Content="50" />
                        <ComboBoxItem Content="100" />
                    </ComboBox>

                    <TextBlock Grid.Row="2" Grid.Column="0" Margin="0,8" VerticalAlignment="Center" Text="Auto-clear history older than" />
                    <ComboBox x:Name="AutoClearCombo" Grid.Row="2" Grid.Column="1" Margin="0,8" Width="120" SelectedIndex="2">
                        <ComboBoxItem Content="7 days" />
                        <ComboBoxItem Content="14 days" />
                        <ComboBoxItem Content="30 days" />
                        <ComboBoxItem Content="Never" />
                    </ComboBox>
                </Grid>
            </StackPanel>
        </ui:CardControl>
    </StackPanel>
</ui:UiPage>
